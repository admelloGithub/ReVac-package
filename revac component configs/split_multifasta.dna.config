;; cannot be defined in conjunction with SEQS_PER_FILE.
$;TOTAL_FILES$;=
$;FILES_PER_DIRECTORY$;=0
;; optionally compress fasta output files
$;COMPRESS_OUTPUT$;=0

[input]
