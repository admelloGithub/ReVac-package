<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>bam2bigwig</name>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Iterator-->
        <INCLUDE file="$;DOCS_DIR$;/file_iterator_template.xml" keys="$;ITERATOR_NAME$;=ITERATOR1,$;ITERATOR_XML$;=ITERATOR1_XML">
		<!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create BedGraph file list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/generate_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.bedGraph"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_BEDGRAPH$;</value>
            </param>
            <param>
				<key>stdout</key>
				<value>$;TMP_DIR$;/generate_list_file.bedgraph.stdout</value>
			</param>
			<param>
				<key>stderr</key>
				<value>$;TMP_DIR$;/generate_list_file.bedgraph.stderr</value>
			</param>
			<arg>--v</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create BigWig file list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/generate_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.bw"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_BIGWIG$;</value>
            </param>
            <param>
				<key>stdout</key>
				<value>$;TMP_DIR$;/generate_list_file.bigwig.stdout</value>
			</param>
			<param>
				<key>stderr</key>
				<value>$;TMP_DIR$;/generate_list_file.bigwig.stderr</value>
			</param>
			<arg>--v</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create WIG file list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/generate_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.wig"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_WIG$;</value>
            </param>
            <param>
				<key>stdout</key>
				<value>$;TMP_DIR$;/generate_list_file.wig.stdout</value>
			</param>
			<param>
				<key>stderr</key>
				<value>$;TMP_DIR$;/generate_list_file.wig.stderr</value>
			</param>
			<arg>--skip_error --v</arg>
        </command>
    </commandSet>
</commandSetRoot>
