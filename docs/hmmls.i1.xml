<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <name>hmmls compute</name>
        <command>
            <type>RunUnixCommand</type>
            <name>replace fasta headers</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/replace_fasta_headers.pl</executable>
            <param>
                <key>--input</key>
                <value>$;I_FILE_PATH$;</value>
            </param>
            <param>
                <key>--map_file</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.map</value>
            </param>
            <param>
                <key>--output</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.fixed.fsa</value>
            </param>
            <param>
                <key>--do_nothing</key>
                <value>$;LEAVE_FASTA_HEADERS$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>hmmls</name>
            <state>incomplete</state>
            <executable>$;HMMLS_EXEC$;</executable>
            <arg>-w $;SEARCH_WINDOW$; -t $;THRESHOLD_CUTOFF$; $;OTHER_OPTS$; $;DATABASE_PATH$; $;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.fixed.fsa</arg>
            <param>  
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.raw</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>fix output file</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/replace_fasta_headers.pl</executable>
            <param>
                <key>--input</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.raw</value>
            </param>
            <param>
                <key>--map_file</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.map</value>
            </param>
            <param>
                <key>--do_nothing</key>
                <value>$;LEAVE_FASTA_HEADERS$;</value>
            </param>
           <param>
                <key>--replace</key>
                <value>1</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>hmmls2bsml</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/hmmls2bsml</executable>
            <param>  
                <key>--input</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.raw</value>
            </param>
            <param>  
                <key>--output</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bsml</value>
            </param>
            <param>  
                <key>--fasta_input</key>
                <value>$;I_FILE_PATH$;</value>
            </param>
            <param>  
                <key>--gzip_output</key>
                <value>$;COMPRESS_BSML_OUTPUT$;</value>
            </param>
            <param>
                <key>--model_mol_type</key>
                <value>$;MODEL_MOL_TYPE$;</value>
            </param>
            <param>
                <key>--model_name</key>
                <value>$;MODEL_NAME$;</value>
            </param>
            <param>
                <key>--model_mol_class</key>
                <value>$;MODEL_MOL_CLASS$;</value>
            </param>
            <param>
                <key>--query_mol_type</key>
                <value>$;QUERY_MOL_TYPE$;</value>
            </param>
            <param>
                <key>--query_mol_class</key>
                <value>$;QUERY_MOL_CLASS$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>store config params</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/analysis2bsml</executable>
            <param>  
                <key>--ergatis_control_file</key>
                <value>$;ERGATIS_DIR$;.ini</value>
            </param>
            <param>  
                <key>--conf</key>
                <value>$;COMPONENT_CONFIG$;</value>
            </param>
            <param>  
                <key>--bsml_file</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bsml</value>
            </param>
            <param>  
                <key>--componenturl</key>
                <value>$;WORKFLOW_REPOSITORY$;/component.xml</value>
            </param>
            <param>  
                <key>--pipelineurl</key>
                <value>$;PIPELINE_XML$;</value>
            </param>
            <param>  
                <key>--analysis_id</key>
                <value>$;COMPONENT_NAME$;_analysis</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>dtd validation</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/dtdValid.pl</executable>
            <param>  
                <key>-d</key>
                <value>$;DOCS_DIR$;/bsml3_1.dtd</value>
            </param>
            <arg>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bsml</arg>
        </command>
    </commandSet>
</commandSetRoot>
