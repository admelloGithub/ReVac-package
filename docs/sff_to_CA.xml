<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>sff_to_CA workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>                
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>sffToCA</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/sff_to_CA</executable>
            <param>
                <key>stdout</key>
                <value>$;TMP_DIR$;/sff_to_CA.stdout</value>
            </param>
            <param>
                <key>stderr</key>
                <value>$;TMP_DIR$;/sff_to_CA.stderr</value>
            </param>
            <param>
                <key>--sff_to_CA_exe</key>
                <value>$;SFFTOCA_EXEC$;</value>
            </param>                
            <param>
                <key>--sff_file</key>
                <value>$;INPUT_FILE$;</value>
            </param>
            <param>
                <key>--sff_file_list</key>
                <value>$;INPUT_FILE_LIST$;</value>
            </param>                                
            <param>
                <key>--library</key>
                <value>$;LIBRARY$;</value>
            </param>
            <param>
                <key>--linker</key>
                <value>$;LINKER$;</value>
            </param>
            <param>
                <key>--trim</key>
                <value>$;TRIM$;</value>
            </param>
            <param>
                <key>--clear</key>
                <value>$;CLEAR$;</value>
            </param>
            <param>
                <key>--insert_size</key>
                <value>&quot;$;INSERT_SIZE$;&quot;</value>
            </param>
            <param>
                <key>--output</key>
                <value>$;OUTPUT_DIRECTORY$;/$;LIBRARY$;.frg</value>
            </param>                
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create fragment list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>              
            </param>
            <param>
                <key>--regex</key>
                <value>".*\.frg"</value>                
            </param>
            <param>
                <key>--output_list</key>
                <value>$;FRG_OUTPUT_LIST$;</value>
            </param>
        </command>                        
    </commandSet>
</commandSetRoot>    
