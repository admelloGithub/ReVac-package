<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <name>bowtie</name>
		<command>
            <type>RunUnixCommand</type>
            <name>bowtie</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/bowtie</executable>            
            <param>
                <key>--seq1file</key>
                <value>$;INPUT_FILE_1$;</value>
            </param>
            <param>
                <key>--seq2file</key>
                <value>'$;INPUT_FILE_2$;'</value>
            </param>
            <param>
                <key>--bowtie_index_dir</key>
                <value>$;BOWTIE_INDEX_DIR$;</value>
            </param>
            <param>
                <key>--prefix</key>
                <value>$;BOWTIE_INDEX_PREFIX$;</value>
            </param>
            <param>
                <key>--outdir</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;</value>
            </param>
            <param>
                <key>--bowtie_bin_dir</key>
                <value>$;BOWTIE_BIN_DIR$;</value>
            </param>
            <param>
                <key>--samtools_bin_dir</key>
                <value>$;SAMTOOLS_BIN_DIR$;</value>
            </param>
            <param>
                <key>--mode</key>
                <value>$;MODE$;</value>
            </param>
            <param>
                <key>--num_mismatches</key>
                <value>$;NUM_MISMATCHES$;</value>
            </param>
            <param>
                <key>--file-type</key>
                <value>$;FILE_TYPE$;</value>
            </param>
            <param>
                <key>--seedlen</key>
                <value>$;SEED_LENGTH$;</value>
            </param>
            <param>
                <key>--minins</key>
                <value>$;MIN_INSERT$;</value>
            </param>
            <param>
                <key>--maxins</key>
                <value>$;MAX_INSERT$;</value>
            </param>
            <param>
                <key>--library-type</key>
                <value>$;LIBRARY_TYPE$;</value>
            </param>
            <param>
                <key>--k</key>
                <value>$;NUM_HITS$;</value>
            </param>
            <param>
                <key>--m</key>
                <value>'$;MAX_MULTIHITS$;'</value>
            </param>
            <param>
                <key>--M</key>
                <value>'$;REPORT_MULTIHITS$;'</value>
            </param>
            <param>
                <key>--un</key>
                <value>'$;UNMAPPED_READS$;'</value>
            </param>
            <param>
                <key>--threads</key>
                <value>$;NUM_THREADS$;</value>
            </param>
            <param>
                <key>--args</key>
                <value>'$;OTHER_PARAMETERS$;'</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/bowtie.stdout</value>
            </param>
            <param>
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/bowtie.stderr</value>
            </param>
            <arg>$;OTHER_ARGS$;</arg>
        </command>
    </commandSet>
</commandSetRoot>
