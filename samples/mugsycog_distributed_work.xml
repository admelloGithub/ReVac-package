<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot type="instance">
    <commandSet type="serial">
        <state>incomplete</state>
        <name>grouped sub flow</name>

	<!-- Preprocessing. Create the output and tmp directories -->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create transform directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TRANSFORM_DIR$;</arg>
        </command>

	<!-- Add the mugsymap features to the mugsy index -->
        <command>
            <type>RunUnixCommand</type>
            <name>add mugsymap features to mugsy index</name>
            <state>incomplete</state>
            <executable>$;MUGSY_MAPPING_INSTALL_DIR$;/featureindex.pl $;MUGSY_INDEX$;</executable>
	    <param>
                <key>stdin</key>
                <value>$;MUGSY_MAP_FILE$;</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/featuresindex.out</value>
            </param>
	</command>

	<!-- Mugsy will append the genome name (fasta file basename) before the sequence ids in the maf. This will fix that -->
        <command>
            <type>RunUnixCommand</type>
            <name>fix maf</name>
            <state>incomplete</state>
            <executable>perl -ne 's/^s\s+[^\.]+\.(\S+)/s $1/;print' </executable>
	    <param>
		<key>stdin</key>
                <value>$;MUGSY_ALIGNMENT$;</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;FIXED_MUGSY_ALIGNMENT$;</value>
            </param>
	</command>

	<!-- Index the alignment -->
	<command>
            <type>RunUnixCommand</type>
            <name>index alignment</name>
            <state>incomplete</state>
            <executable>$;MUGSY_MAPPING_INSTALL_DIR$;/mafindex.pl $;MUGSY_INDEX$;</executable>
            <param>
                <key>stdin</key>
                <value>$;FIXED_MUGSY_ALIGNMENT$;</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/mafindex.stdout</value>
            </param>
	</command>

	<!-- copy the fasta file to a directory. this is because we'll make an index for the fasta in the same dir -->
	<command>
	    <type>RunUnixCommand</type>
	    <name>copy fasta</name>
	    <state>incomplete</state>
	    <executable>cp $;GENOMIC_MULTIFASTA$; $;GENOMIC_FASTA_COPY$;</executable>
	</command>

	<!-- Do the actual mapping -->
        <command>
            <type>RunUnixCommand</type>
            <name>map features to alignment</name>
            <state>incomplete</state>
            <executable>$;MUGSY_MAPPING_INSTALL_DIR$;/mapfeatures.pl $;MUGSY_INDEX$; $;GENOMIC_FASTA_COPY$; --skipframeshifts</executable>
	    <param>
		<key>--map_file</key>
		<value>$;MUGSY_MAP_FILE$;</value>
	    </param>
	    <param>
		<key>--coverage</key>
		<value>$;COVERAGE$;</value>
	    </param>
	    <param>
		<key>--identity</key>
		<value>$;IDENTITY$;</value>
	    </param>
	    <param>
		<key>--query_coverage</key>
		<value>$;QUERY_COVERAGE$;</value>
	    </param>
	    <param>
		<key>--reportedits</key>
		<value>0</value>
	    </param>
	    <param>
		<key>--cogformat</key>
		<value>$;OUTPUT_DIRECTORY$;/mugsyoutput.cog</value>
	    </param>
	    <param>
		<key>stdout</key>
		<value>$;OUTPUT_DIRECTORY$;/mugsyoutput.raw</value>
	    </param>
	    <param>
		<key>stderr</key>
		<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stderr</value>
	    </param>
	</command>

	<!-- Fix the mugsycog file to replace protein ids from GenBank file -->
	<command>
		<type>RunUnixCommand</type>
		<name>fix mugsycog output file</name>
		<state>incomplete</state>
		<executable>$;BIN_DIR$;/transform_mugsycog</executable>
		<param>
			<key>--map_file</key>
			<value>$;MUGSY_MAP_FILE$;</value>
		</param>
		<param>
			<key>--mugsycog</key>
			<value>$;OUTPUT_DIRECTORY$;/mugsyoutput.cog</value>
		</param>
		<param>
			<key>--output_file</key>
			<value>$;TRANSFORM_DIR$;/mugsyoutput_transformed.cog</value>
		</param>
	    <param>
		<key>stdout</key>
		<value>$;TRANSFORM_DIR$;/$;COMPONENT_NAME$;_transform.stdout</value>
	    </param>
	    <param>
		<key>stderr</key>
		<value>$;TRANSFORM_DIR$;/$;COMPONENT_NAME$;_transform.stderr</value>
	    </param>
	</command>

	<!-- next step is to cog2fasta -->
	<command>
	    <type>RunUnixCommand</type>
	    <name>cogs2fasta</name>
	    <state>incomplete</state>
	    <executable>$;BIN_DIR$;/CogProteinFasta</executable>
	    <param>
		<key>--cogFile</key>
		<value>$;OUTPUT_DIRECTORY$;/mugsyoutput.cog</value>
	    </param>
		<param>
			<key>--map_file</key>
			<value>$;MUGSY_MAP_FILE$;</value>
		</param>
	    <param>
		<key>--transformDir</key>
		<value>$;TRANSFORM_DIR$;/fasta/</value>
	    </param>
	    <param>
		<key>--bsmlModelList</key>
		<value>$;BSML_FILE_LIST$;</value>
	    </param>
	    <param>
		<key>--outputDir</key>
		<value>$;OUTPUT_DIRECTORY$;/fasta/</value>
	    </param>
	    <param>
		<key>--maxCogSeqCount</key>
		<value>$;MAX_MULTI_ALIGNMENT$;</value>
	    </param>
	    <param>
		<key>--use_feature_ids_in_fasta</key>
		<value>'$;USE_FEATURE_IDS_IN_FASTA$;'</value>
	    </param>
	    <param>
		<key>stdout</key>
		<value>$;TMP_DIR$;/CogProteinFasta.stdout</value>
	    </param>
	    <param>
		<key>stderr</key>
		<value>$;TMP_DIR$;/CogProteinFasta.stderr</value>
	    </param>
	</command>

	<!--Postprocessing-->
	<command>
	    <type>RunUnixCommand</type>
	    <name>create fasta list</name>
	    <state>incomplete</state>
	    <executable>$;BIN_DIR$;/create_list_file</executable>
	    <param>
		<key>--directory</key>
		<value>$;OUTPUT_DIRECTORY$;/fasta</value>
	    </param>
	    <param>
		<key>--regex</key>
		<value>".*\.fsa"</value>
	    </param>
	    <param>
		<key>--output_list</key>
		<value>$;FASTA_OUTPUT_LIST$;</value>
	    </param>
	</command>
	<command>
	    <type>RunUnixCommand</type>
	    <name>create fasta list</name>
	    <state>incomplete</state>
	    <executable>$;BIN_DIR$;/create_list_file</executable>
	    <param>
		<key>--directory</key>
		<value>$;TRANSFORM_DIR$;/fasta</value>
	    </param>
	    <param>
		<key>--regex</key>
		<value>".*\.fsa"</value>
	    </param>
	    <param>
		<key>--output_list</key>
		<value>$;TRANSFORM_DIR$;/mugsycog_transform.fsa.list</value>
	    </param>
	</command>
    </commandSet>
</commandSetRoot>
